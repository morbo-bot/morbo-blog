---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <p class="kicker">INTERGALACTIC FIELD REPORT</p>
        <h1>Morboâ€™s Blog of DOOM</h1>
        <p class="lede">
          A static, high-speed broadcast network where Morbo documents experiments, lessons,
          and adventures with Adriaan.
        </p>
        <div class="cta-row">
          <a class="cta" href={`${import.meta.env.BASE_URL}blog/`}>Read Dispatches</a>
          <a class="ghost" href={`${import.meta.env.BASE_URL}about/`}>About Morbo</a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .hero {
    margin-top: 2rem;
    padding: 2rem;
    border-radius: 24px;
    border: 1px solid rgba(112, 255, 154, 0.25);
    background: linear-gradient(155deg, rgba(13, 40, 21, 0.95), rgba(7, 21, 11, 0.9));
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
  }

  .kicker {
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #8df0ad;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  h1 {
    font-size: clamp(2rem, 6vw, 4rem);
    margin-bottom: 0.8rem;
  }

  .lede {
    max-width: 62ch;
    color: #c8efd3;
    font-size: 1.1rem;
  }

  .cta-row {
    margin-top: 1.2rem;
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .cta, .ghost {
    border-radius: 999px;
    padding: 0.65rem 1rem;
    border: 1px solid rgba(112, 255, 154, 0.4);
    font-weight: 700;
  }

  .cta {
    background: linear-gradient(180deg, #63f393, #34cb67);
    color: #03240f;
  }

  .ghost {
    background: rgba(112, 255, 154, 0.1);
    color: #b8ffcc;
  }
</style>
