---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import morboDeskImage from '../assets/morbo-news-desk-final.png';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="sky-glow"></div>
				<div class="hero-copy">
					<p class="eyebrow">LIVE FROM THE 31ST CENTURY</p>
					<h1>MORBO'S FUTURE NEWSROOM</h1>
					<p class="lede">
						Broadcast-grade doom reports with loud headlines, neon skies, and retro sciâ€‘fi attitude.
					</p>
					<div class="cta-row">
						<a class="cta primary" href={`${import.meta.env.BASE_URL}blog/`}>Read Dispatches</a>
						<a class="cta" href={`${import.meta.env.BASE_URL}about/`}>Meet Morbo</a>
					</div>
				</div>

				<div class="hero-art">
					<img src={morboDeskImage.src} alt="Morbo at the intergalactic news desk" loading="eager" />
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero {
		position: relative;
		display: grid;
		grid-template-columns: 1.05fr 0.95fr;
		gap: clamp(1rem, 3vw, 2rem);
		align-items: stretch;
		padding: clamp(1rem, 2.4vw, 1.8rem);
		border: var(--b3);
		border-radius: 24px;
		background: linear-gradient(180deg, var(--sky-top) 0 35%, var(--sky-mid) 35% 74%, var(--sky-bottom) 74% 100%);
		box-shadow: var(--shadow-hard);
		overflow: hidden;
	}

	.sky-glow {
		position: absolute;
		inset: 0;
		background:
			radial-gradient(circle at 75% 18%, rgba(162, 250, 255, 0.75), transparent 34%),
			radial-gradient(circle at 16% 8%, rgba(255, 233, 125, 0.25), transparent 26%);
		pointer-events: none;
	}

	.hero-copy,
	.hero-art {
		position: relative;
		z-index: 1;
	}

	.hero-copy {
		background: #0b315e;
		border: var(--b3);
		border-radius: 18px;
		box-shadow: var(--shadow-hard-sm);
		padding: clamp(1rem, 2.4vw, 1.6rem);
	}

	.eyebrow {
		margin: 0;
		font-size: 0.85rem;
		font-weight: 800;
		letter-spacing: 0.16em;
		text-transform: uppercase;
		color: #ffe779;
	}

	h1 {
		margin: 0.55rem 0 0.85rem;
		font-size: clamp(2rem, 6vw, 4rem);
		line-height: 0.94;
		letter-spacing: 0.03em;
		color: #f1492a;
		-webkit-text-stroke: 2px #ffe779;
		text-shadow: 3px 3px 0 #0d7a72, 0 8px 16px rgba(0, 0, 0, 0.42);
		font-family: Impact, 'League Spartan', sans-serif;
		text-transform: uppercase;
	}

	.lede {
		margin: 0;
		font-size: clamp(1rem, 1.8vw, 1.32rem);
		color: #e6fbff;
		max-width: 34ch;
		text-shadow: 0 1px 0 rgba(0,0,0,0.35);
	}

	.cta-row {
		display: flex;
		gap: 0.75rem;
		flex-wrap: wrap;
		margin-top: 1.2rem;
	}

	.cta {
		display: inline-block;
		padding: 0.78rem 1.2rem;
		border-radius: 999px;
		border: var(--b2);
		background: #c2ecff;
		color: #061526;
		font-weight: 900;
		text-transform: uppercase;
		letter-spacing: 0.04em;
		box-shadow: var(--shadow-hard-sm);
	}

	.cta.primary {
		background: var(--accent-red);
		color: #fff;
	}

	.cta:active {
		transform: translate(2px, 2px);
		box-shadow: 1px 1px 0 #000;
	}

	.hero-art {
		border: var(--b3);
		border-radius: 18px;
		background: #0f3e70;
		position: relative;
		min-height: 420px;
		box-shadow: var(--shadow-hard-sm);
	}

	.hero-art img {
		width: 100%;
		height: 100%;
		min-height: 420px;
		object-fit: cover;
		object-position: center;
		border-radius: 14px;
		border: 3px solid #041528;
		box-shadow: 0 10px 24px rgba(0, 0, 0, 0.35);
	}

	@media (max-width: 900px) {
		.hero {
			grid-template-columns: 1fr;
			padding: 1rem;
		}
		.hero-copy {
			padding: 1rem;
		}
		.hero-art,
		.hero-art img {
			min-height: 320px;
		}
	}
</style>
