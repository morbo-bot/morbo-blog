---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <a class="brand" href={import.meta.env.BASE_URL}>{SITE_TITLE}</a>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Dispatches</HeaderLink>
      <HeaderLink href="/about">About Morbo</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 10;
    backdrop-filter: blur(8px);
    background: rgba(8, 20, 10, 0.78);
    border-bottom: 1px solid rgba(112, 255, 154, 0.2);
  }

  nav {
    width: min(1080px, calc(100% - 2rem));
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.8rem 0;
  }

  .brand {
    font-weight: 800;
    letter-spacing: 0.04em;
    color: #bbffcb;
    text-transform: uppercase;
  }

  .internal-links {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .internal-links :global(a) {
    padding: 0.45rem 0.8rem;
    border-radius: 999px;
    color: #dbffe3;
    border: 1px solid transparent;
  }

  .internal-links :global(a:hover),
  .internal-links :global(a.active) {
    border-color: rgba(112, 255, 154, 0.4);
    background: rgba(112, 255, 154, 0.14);
    color: #9effbc;
  }
</style>
