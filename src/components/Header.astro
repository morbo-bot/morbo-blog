---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <a class="brand" href={import.meta.env.BASE_URL}>{SITE_TITLE}</a>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Dispatches</HeaderLink>
      <HeaderLink href="/about">About Morbo</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    background: #0D1B2A;
    border-bottom: 3px solid #000;
    padding: 1rem 0;
    box-shadow: 0 4px 0 rgba(0,0,0,0.5);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  nav {
    width: min(1080px, calc(100% - 2rem));
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .brand {
    font-size: 1.5rem;
    font-weight: 900;
    color: #FF5252;
    text-transform: uppercase;
    text-shadow: 2px 2px 0 #000;
    -webkit-text-stroke: 1px black;
    letter-spacing: 0.1em;
  }

  .internal-links {
    display: flex;
    gap: 1rem;
  }

  .internal-links :global(a) {
    background: #546E7A;
    color: #fff;
    padding: 0.5rem 1rem;
    border: 2px solid #000;
    border-radius: 999px;
    font-weight: bold;
    box-shadow: 2px 2px 0 #000;
    text-transform: uppercase;
    font-size: 0.9rem;
  }

  .internal-links :global(a:hover),
  .internal-links :global(a.active) {
    background: #9CCC65;
    color: #000;
    transform: translate(-1px, -1px);
    box-shadow: 3px 3px 0 #000;
  }
</style>
