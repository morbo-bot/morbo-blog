---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <a class="brand" href={import.meta.env.BASE_URL}>{SITE_TITLE}</a>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Dispatches</HeaderLink>
      <HeaderLink href="/about">About Morbo</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    background: #091a3a;
    border-bottom: var(--b3);
    box-shadow: 0 4px 0 #000;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  nav {
    width: min(1080px, calc(100% - 1rem));
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: .75rem;
    flex-wrap: wrap;
    padding: .8rem 0;
  }

  .brand {
    font-family: Impact, 'League Spartan', sans-serif;
    font-size: clamp(1rem, 3vw, 1.6rem);
    letter-spacing: .08em;
    color: #f54837;
    -webkit-text-stroke: 1.5px #ffe56c;
    text-shadow: 2px 2px 0 #0c847a;
    line-height: 1;
  }

  .internal-links {
    display: flex;
    gap: .55rem;
    flex-wrap: wrap;
  }

  .internal-links :global(a) {
    border: var(--b2);
    border-radius: var(--radius-pill);
    box-shadow: var(--shadow-hard-sm);
    padding: .45rem .95rem;
    font-weight: 900;
    text-transform: uppercase;
    white-space: nowrap;
    background: #678091;
    color: #fff;
  }

  .internal-links :global(a.active),
  .internal-links :global(a:hover) {
    background: var(--accent-green);
    color: #061526;
  }

  @media (max-width: 760px) {
    nav { justify-content: center; }
    .brand { width: 100%; text-align: center; }
    .internal-links { justify-content: center; width: 100%; }
  }
</style>
