---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href = '/', class: className, ...props } = Astro.props as Props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '/');

const normalize = (p: string) => {
  const cleaned = p.replace(/^\/+|\/+$/g, '');
  return cleaned ? `/${cleaned}` : '/';
};

const isExternal = /^(https?:|mailto:|tel:|#)/.test(href);
const normalizedHref = normalize(href);
const currentTopLevel = `/${pathname.replace(/^\/+|\/+$/g, '').split('/')[0] || ''}`.replace(/\/$/, '') || '/';
const isActive = !isExternal && (normalize(pathname) === normalizedHref || currentTopLevel === normalizedHref);
const resolvedHref = isExternal
  ? href
  : `${import.meta.env.BASE_URL}${href.replace(/^\/+/, '')}`;
---

<a href={resolvedHref} class:list={[className, { active: isActive }]} {...props}>
  <slot />
</a>
<style>
  a {
    display: inline-block;
    text-decoration: none;
  }
  a.active {
    font-weight: 700;
  }
</style>
